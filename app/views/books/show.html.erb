<h1>book#show</h1>
<%= render 'books/list', user: @user, book: @book %>

<div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image(40,40) %><br>
                <%= @user.name %>
                <% end %>
                <%#= link_to @user.name, user_path(@user.id) %>
                  <!--controller,showアクションの@userのnameを呼び出している-->
              </td>
              <td>
                <%= link_to @book.title, user_path(@user.id) %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td>
                <%= link_to "Edit", edit_book_path, class:"btn btn-sm btn-success" %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Destroy", book_path(@book.id), method: :delete, class:"btn btn-sm btn-danger" %>
                  <!--book_pathはbooks#destroyを行うためのpath
                  -->
                <% end %>
              </td>
            </tr>
        </tbody>
    </table>
</div>