   <%= @user.errors.count %>errors prohibited this obj from being saved:
   <ul>
     <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
   </ul>
</div>
 <% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user do |f| %>
      <div class="form-group">
        <label class="user_name">Name</label><br>
        <%= f.text_field :name, class:"form-control name" %>
      </div>
      <div class="form_group">
        <label class="user_image">Image</label>
        <%= f.file_field :get_proofile_image, class:"form-control-file user_image" %>
      </div>
      <div class="form-group">
        <label class="user_introduction">Introduction</label>
        <%= f.text_area :introduction, class:"form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "Upgrate User", class:"btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

