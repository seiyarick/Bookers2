
<%= render 'books/list', user: @user, book: @book %>

  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
            <% @users.each do |users| %>
            <tr>
              <td><%= image_tag users.get_profile_image(63,63) %></td>
              <td><%= users.name %></td>
              <td><%= link_to 'Show', user_path(users.id) %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
  </div>
